  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build --turbopack",
    "start": "next start",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "lint": "eslint",
    "lint:fix": "eslint . --fix",
    "prettier:check": "prettier \"**/*.{ts,tsx,js,jsx,css,md,mdx,json}\" --check",
    "prettier:write": "prettier \"**/*.{ts,tsx,js,jsx,css,md,mdx,json}\" --write",
    "prettier:debug": "prettier \"**/*.{ts,tsx,js,jsx,json,css,md,mdx}\" --check --log-level debug",
    "version:patch": "npm version patch -m \"chore(release): v%s\"",
    "version:minor": "npm version minor -m \"chore(release): v%s\"",
    "prepare": "husky",
    "db:gen": "drizzle-kit generate",
    "db:mig": "drizzle-kit migrate"
